---
interface Props {
  businessName: string;
  phone: string;
  email: string;
  address: {
    street: string;
    city: string;
    state: string;
    zip: string;
  };
  navLinks: { label: string; href: string }[];
}

const { businessName, phone, email, address, navLinks } = Astro.props;
const telHref = `tel:${phone.replace(/[^+\d]/g, '')}`;
const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-dark text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <div>
        <h3 class="text-white text-lg font-bold mb-4">{businessName}</h3>
        <p class="text-sm leading-relaxed mb-4">
          Trusted legal representation serving the Denver metro area. We fight for your rights
          with dedication, integrity, and decades of experience.
        </p>
        <p class="text-sm">
          <a href={telHref} class="text-accent hover:text-accent-light transition-colors font-semibold">
            {phone}
          </a>
        </p>
      </div>

      <div>
        <h3 class="text-white text-lg font-bold mb-4">Quick Links</h3>
        <nav class="flex flex-col gap-2" aria-label="Footer navigation">
          {navLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-gray-300 hover:text-white transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <div>
        <h3 class="text-white text-lg font-bold mb-4">Contact Us</h3>
        <address class="not-italic text-sm space-y-2">
          <p>{address.street}</p>
          <p>{address.city}, {address.state} {address.zip}</p>
          <p>
            <a href={telHref} class="hover:text-white transition-colors">{phone}</a>
          </p>
          <p>
            <a href={`mailto:${email}`} class="hover:text-white transition-colors">{email}</a>
          </p>
        </address>
      </div>
    </div>
  </div>

  <div class="border-t border-primary-light">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-gray-400">
        &copy; {currentYear} {businessName}. All rights reserved.
      </p>
      <p class="text-sm text-gray-500">
        Serving {address.city}, {address.state} and surrounding areas
      </p>
    </div>
  </div>
</footer>

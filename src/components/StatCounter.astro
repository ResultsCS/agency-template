---
interface Props {
  stats: {
    number: string;
    label: string;
  }[];
}

const { stats } = Astro.props;
---

<section class="bg-primary py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      {stats.map(stat => (
        <div>
          <div class="text-4xl md:text-5xl font-bold text-accent mb-2">{stat.number}</div>
          <div class="text-gray-300 text-sm uppercase tracking-wide font-medium">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

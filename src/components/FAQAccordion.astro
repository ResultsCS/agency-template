---
interface Props {
  headline: string;
  faqs: {
    question: string;
    answer: string;
  }[];
}

const { headline, faqs } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-14">{headline}</h2>

    <div class="space-y-0">
      {faqs.map(faq => (
        <details class="group border-b border-gray-200">
          <summary class="flex items-center justify-between py-5 cursor-pointer list-none">
            <span class="font-semibold text-primary text-lg pr-4 group-hover:text-accent transition-colors">
              {faq.question}
            </span>
            <svg
              class="w-5 h-5 text-gray-400 shrink-0 transition-transform group-open:rotate-180"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="pb-5 text-gray-600 leading-relaxed">
            {faq.answer}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

---
interface Props {
  headline: string;
  subtext: string;
  phone: string;
  ctaText: string;
  ctaLink: string;
}

const { headline, subtext, phone, ctaText, ctaLink } = Astro.props;
const telHref = `tel:${phone.replace(/[^+\d]/g, '')}`;
---

<section class="bg-accent py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{headline}</h2>
    <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">{subtext}</p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={ctaLink}
        class="inline-flex items-center bg-primary hover:bg-primary-dark text-white px-8 py-4 rounded font-semibold text-lg transition-colors"
      >
        {ctaText}
      </a>
      <a
        href={telHref}
        class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 border-2 border-white text-white px-8 py-4 rounded font-semibold text-lg transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        Call {phone}
      </a>
    </div>
  </div>
</section>

---
interface Props {
  badges: {
    value: string;
    label: string;
  }[];
}

const { badges } = Astro.props;

const icons = [
  // Shield
  '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>',
  // Trophy
  '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 15l-2 5h4l-2-5zm-4-3a4 4 0 108 0H8zM6 4h12M6 4a2 2 0 00-2 2v1a3 3 0 003 3M6 4V3m12 1a2 2 0 012 2v1a3 3 0 01-3 3m0 0H9m9-6V3"/></svg>',
  // Clock
  '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>',
  // Star
  '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>',
];
---

<section class="bg-gray-50 py-12 border-y border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      {badges.map((badge, i) => (
        <div class="flex flex-col items-center text-center gap-2">
          <div class="text-accent" set:html={icons[i % icons.length]} />
          <span class="text-2xl md:text-3xl font-bold text-primary">{badge.value}</span>
          <span class="text-sm text-gray-600 uppercase tracking-wide font-medium">{badge.label}</span>
        </div>
      ))}
    </div>
  </div>
</section>

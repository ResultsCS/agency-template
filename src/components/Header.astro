---
interface Props {
  businessName: string;
  phone: string;
  navLinks: { label: string; href: string }[];
}

const { businessName, phone, navLinks } = Astro.props;
const telHref = `tel:${phone.replace(/[^+\d]/g, '')}`;
---

<header class="bg-primary sticky top-0 z-50 shadow-lg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <input type="checkbox" id="mobile-menu-toggle" class="hidden peer" aria-hidden="true" />
    <div class="flex items-center justify-between h-20">
      <a href="/" class="text-white text-xl font-bold tracking-tight hover:text-accent transition-colors">
        {businessName}
      </a>

      <nav class="hidden md:flex items-center gap-8" aria-label="Main navigation">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-gray-200 hover:text-white transition-colors text-sm font-medium uppercase tracking-wide"
          >
            {link.label}
          </a>
        ))}
      </nav>

      <a
        href={telHref}
        class="hidden md:inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-white px-5 py-2.5 rounded font-semibold transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        {phone}
      </a>

      <label for="mobile-menu-toggle" class="md:hidden cursor-pointer text-white p-2" aria-label="Toggle menu">
        <svg class="menu-open w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg class="menu-close hidden w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </label>
    </div>

    <div class="hidden peer-checked:block md:hidden pb-4 border-t border-primary-light">
      <nav class="flex flex-col gap-1 pt-4" aria-label="Mobile navigation">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-gray-200 hover:text-white hover:bg-primary-light transition-colors text-sm font-medium uppercase tracking-wide px-3 py-2 rounded"
          >
            {link.label}
          </a>
        ))}
      </nav>
      <a
        href={telHref}
        class="mt-4 flex items-center justify-center gap-2 bg-accent hover:bg-accent-dark text-white px-5 py-3 rounded font-semibold transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        Call {phone}
      </a>
    </div>
  </div>
</header>

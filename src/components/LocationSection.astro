---
interface Props {
  businessName: string;
  address: {
    street: string;
    city: string;
    state: string;
    zip: string;
  };
  phone: string;
  email: string;
  hours: { day: string; time: string }[];
  serviceAreas: string[];
  mapEmbedUrl?: string;
}

const { businessName, address, phone, email, hours, serviceAreas, mapEmbedUrl } = Astro.props;
const telHref = `tel:${phone.replace(/[^+\d]/g, '')}`;
---

<section class="py-20 bg-white" id="location">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-14">Visit Our Office</h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <div class="space-y-8">
        <div>
          <h3 class="text-xl font-bold text-primary mb-3">{businessName}</h3>
          <address class="not-italic text-gray-600 space-y-1">
            <p>{address.street}</p>
            <p>{address.city}, {address.state} {address.zip}</p>
            <p class="pt-2">
              <a href={telHref} class="text-accent hover:text-accent-dark font-semibold transition-colors">{phone}</a>
            </p>
            <p>
              <a href={`mailto:${email}`} class="text-accent hover:text-accent-dark font-semibold transition-colors">{email}</a>
            </p>
          </address>
        </div>

        <div>
          <h3 class="text-xl font-bold text-primary mb-3">Office Hours</h3>
          <dl class="space-y-1">
            {hours.map(h => (
              <div class="flex justify-between text-gray-600 py-1 border-b border-gray-100 last:border-0">
                <dt class="font-medium">{h.day}</dt>
                <dd>{h.time}</dd>
              </div>
            ))}
          </dl>
        </div>

        <div>
          <h3 class="text-xl font-bold text-primary mb-3">Service Areas</h3>
          <div class="flex flex-wrap gap-2">
            {serviceAreas.map(area => (
              <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm font-medium">
                {area}
              </span>
            ))}
          </div>
        </div>
      </div>

      <div>
        {mapEmbedUrl ? (
          <iframe
            src={mapEmbedUrl}
            width="100%"
            height="100%"
            style="border:0; min-height: 400px;"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title={`Map showing ${businessName} location`}
          ></iframe>
        ) : (
          <div class="bg-gray-100 rounded-lg flex items-center justify-center border border-gray-200" style="min-height: 400px;">
            <div class="text-center text-gray-500 p-8">
              <svg class="w-16 h-16 mx-auto mb-4 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <p class="font-medium">Google Maps Embed</p>
              <p class="text-sm mt-1">Replace with your Google Maps embed URL</p>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

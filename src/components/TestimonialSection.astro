---
interface Props {
  headline: string;
  testimonials: {
    name: string;
    rating: number;
    quote: string;
    title?: string;
  }[];
}

const { headline, testimonials } = Astro.props;
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-primary text-center mb-14">{headline}</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map(testimonial => (
        <div class="bg-white rounded-lg p-8 shadow-sm border border-gray-100">
          <div class="flex gap-1 mb-4">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg
                class={`w-5 h-5 ${i < testimonial.rating ? 'text-accent' : 'text-gray-300'}`}
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
              </svg>
            ))}
          </div>
          <blockquote class="text-gray-700 leading-relaxed mb-6 italic">
            &ldquo;{testimonial.quote}&rdquo;
          </blockquote>
          <div class="border-t border-gray-100 pt-4">
            <p class="font-bold text-primary">{testimonial.name}</p>
            {testimonial.title && (
              <p class="text-sm text-gray-500">{testimonial.title}</p>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

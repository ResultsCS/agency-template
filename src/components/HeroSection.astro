---
interface Props {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
  phone: string;
  backgroundImage?: string;
}

const { headline, subheadline, ctaText, ctaLink, phone, backgroundImage } = Astro.props;
const telHref = `tel:${phone.replace(/[^+\d]/g, '')}`;
---

<section
  class="relative bg-primary text-white py-24 md:py-32 overflow-hidden"
  style={backgroundImage ? `background-image: url('${backgroundImage}'); background-size: cover; background-position: center;` : undefined}
>
  {backgroundImage && (
    <div class="absolute inset-0 bg-primary/80"></div>
  )}

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6">
      {headline}
    </h1>
    <p class="text-lg md:text-xl text-gray-200 max-w-3xl mx-auto mb-10 leading-relaxed">
      {subheadline}
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={ctaLink}
        class="inline-flex items-center bg-accent hover:bg-accent-dark text-white px-8 py-4 rounded font-semibold text-lg transition-colors"
      >
        {ctaText}
      </a>
      <a
        href={telHref}
        class="inline-flex items-center gap-2 border-2 border-white/30 hover:border-white text-white px-8 py-4 rounded font-semibold text-lg transition-colors"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/></svg>
        {phone}
      </a>
    </div>
  </div>
</section>
